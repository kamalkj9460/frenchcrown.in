      <a class="Button-primary modal-button button-cm" href="#">cm</a>
      <a class="close"> X </a>
    </div>
    {%- if product.type == 'Suit' or product.type == 'Trenchcoat Suit' -%}
    	{%- include 'trousers-size'-%}    
